@article{SimonsChabris1999Gorillas,
  title     = {Gorillas in Our Midst: Sustained Inattentional Blindness for Dynamic Events},
  author    = {Simons, Daniel J. and Chabris, Christopher F.},
  journal   = {Perception},
  year      = {1999},
  volume    = {28},
  number    = {9},
  pages     = {1059--1074},
  doi       = {10.1068/p281059},
  keywords  = {HUMMBL, Perception, P1-ObservationLimits, IN1-BiasRecognition, InattentionalBlindness, Attention, SelectiveAttention, ChangeBlindness},
  abstract  = {This landmark study demonstrates that observers can fail to notice unexpected events when attention is otherwise engaged, even when those events are clearly visible. In the famous 'invisible gorilla' experiment, participants counting basketball passes often failed to notice a person in a gorilla suit walking through the scene. The findings reveal systematic limits of perception and challenge assumptions about conscious awareness. This work establishes that perception is not simply a function of what enters our visual field, but depends critically on attentional deployment. The results bridge perception and interpretation by showing how expectation and task focus shape what we consciously experience, with implications for eyewitness testimony, interface design, and understanding cognitive failures.}
}

